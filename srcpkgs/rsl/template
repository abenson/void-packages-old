# Template file for 'rsl'
pkgname=rsl
version=1.44
revision=1
build_style=gnu-configure
makedepends="bzip2-devel zlib-devel libjpeg-turbo-devel hdf5-devel"
short_desc="TRMM Radar Software Libary"
maintainer="Andrew Benson <abenson+void@gmail.com>"
license="GPL-2.0-or-later"
homepage="http://pileus.org/aweather/rsl"
distfiles="http://pileus.org/aweather/files/rsl-${version}.tar.gz"
checksum=dfd2023edf0a52f3cf361a70690cba9600b946efce40b2070f7509927de6819a

rsl-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove "usr/include"
		vmove "usr/lib/*.so"
		vmove "usr/lib/*.a"
	}
}
