# Template file for 'mhash'
pkgname=mhash
version=0.9.9.9
revision=1
build_style=gnu-configure
short_desc="Uniform interface to a large number of hash algorithms"
maintainer="Andrew Benson <abenson+void@gmail.com>"
license="LGPL-2.1"
homepage="http://mhash.sourceforge.net/"
distfiles="${SOURCEFORGE_SITE}/project/${pkgname}/${pkgname}/${version}/${pkgname}-${version}.tar.bz2"
checksum=56521c52a9033779154432d0ae47ad7198914785265e1f570cee21ab248dfef0

mhash-devel_package() {
	short_desc+=" - development files"
	depends="${makedepends} ${sourcepkg}>=${version}_${revision}"
	pkg_install() {
		vmove usr/lib/*.so
		vmove usr/lib/*.a
		vmove usr/include
		vmove usr/share/man
	}
}
